.p-picker-input
  position relative
  display flex
  align-items center
  justify-content space-around
  padding-left 12px
  padding-right 12px
  border-width 1px
  border-style solid
  border-color $grey-400
  border-radius 4px
  //width 296px
  min-width 120px
  max-width 332px
  height 32px
  text-align center
  cursor pointer
  transition border .3s
  &:hover
    border-color $blue-500
  .p-picker-input-tip
    display ruby
    color $grey-400
    font-size 14px
    line-height 32px
  .p-picker-clear-svg
    position absolute
    top 8px
    right 12px
    path
      transition fill .3s
    &:hover
      path
        fill #646A73
  .p-picker-input-values
    width 100%
    color $grey-900
.p-picker-input-values-default
  margin-top 12px
  margin-bottom @margin-top
  border-color $blue-500
  width 294px
  color $grey-900
  article
    width 100%
    color $grey-400
    font-size 14px
    user-select none
  .p-picker-input-solstice
    display ruby
    width 20%
    color $grey-500
