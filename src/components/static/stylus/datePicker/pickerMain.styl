.p-picker
  display inline-block
.p-picker-child
  position relative
  .p-picker-main
    outline none
    position absolute
    left 0
    top 0
    background-color #fff
    box-shadow 0 2px 10px 0 rgba(31,35,41,.1)
    border-radius 4px
    min-width 328px
    max-width 624px
    //height 384px
    z-index 100
    .p-picker-main-item-box
      padding 0 16px
      .p-picker-main-item-input-box
        display flex
        align-items center
      .p-picker-main-item
        display flex
        align-items center
        justify-content center
    .p-picker-main-handle
      padding 16px
      text-align right
      width 100%

@keyframes opacityTopIn
  from
    opacity 0
    top -32px
  to
    opacity 1
    top 0
@keyframes opacityTopOut
  from
    opacity 1
    top 0
  to
    opacity 0
    top -32px

.opacityTop-enter-active
  animation opacityTopIn .3s
.opacityTop-leave-active
  animation opacityTopOut .3s