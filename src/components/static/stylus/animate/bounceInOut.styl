/*CSS动画*/
@keyframes bounceIn
  from
    opacity 0
    transform scale3d(.8, .8, .8)
  to
    opacity 1
    transform scale3d(1, 1, 1)
@keyframes bounceOut
  from
    opacity 1
    transform scale3d(1, 1, 1)
  to
    opacity 0
    transform scale3d(.8, .8, .8)

.bounceInOut-enter-active
  animation bounceIn .3s
.bounceInOut-leave-active
  animation bounceOut .3s