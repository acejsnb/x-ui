.p-select-option
  padding-top 4px
  padding-bottom 4px
  background-color #fff
  //border 1px solid $grey-300
  border-radius 4px
  box-shadow 0 5px 10px rgba(31,35,41,.1)
  width 100%
  //max-height 168px
  //overflow-y auto
  .p-select-option-item
    padding-left 12px
    padding-top 5px
    padding-bottom 5px
    width 100%
    height 32px
    line-height 22px
    color $grey-900
    text-align left
    font-size 14px
    cursor pointer
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    &:hover
      background-color $grey-200