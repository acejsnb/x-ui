*, :after, :before
  box-sizing border-box


body
  position relative
  font-family -apple-system, "Helvetica Neue", Helvetica, "Segoe UI", Tahoma, Arial, "PingFang SC", "Source Han Sans SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", sans-seri
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.page
  .theme-default-content, .page-nav
    max-width 1336px

.theme-default-content
  h1, h2, h3
    margin-bottom 16px
    padding-bottom 16px
  > p
    padding-top 12px
  .custom-block-title
    margin-bottom 4px

.custom-block.tip, .custom-block.warning, .custom-block.danger
  padding-top 16px
  padding-bottom 16px
